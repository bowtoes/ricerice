#!/usr/bin/env sh
# Sets the background. If given an argument, will set file as background.

if [ -n "$WALLDIR" ] ; then
    DIR="$WALLDIR"
else
    DIR="$HOME/wallpapers/"
fi
# $1 = directory
selectRandomFile()
{
    [ "$#" -eq 0 ] && exit
    if [ -r $1 ]; then
        echo "$(find -L $(realpath $1) -type f | shuf -n 1)"
    else
        echo "Please input an image file or directory"
        exit
    fi
}

[ -n "$1" ] && DIR=$1
echo $DIR
xwallpaper --zoom "$(selectRandomFile $DIR)"
