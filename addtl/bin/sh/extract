#!/usr/bin/env sh
# A general, all-purpose extraction script.
#
# Default behavior: Extract archive into new directory
# Behavior with `-c` option: Extract contents into current directory

#while getopts "hc" o; do case "${o}" in
#	c) extracthere="True" ;;
#	*) printf "Options:\\n   -c: Extract archive into current directory rather than a new one.\\n" && exit ;;
#esac done
#
#if [ -z "$extracthere" ]; then
#	archive="$(readlink -f "$*")" &&
#	directory="$(echo "$archive" | sed 's/\.[^\/.]*$//')" &&
#	mkdir -p "$directory" &&
#	cd "$directory" || exit
#else
#	archive="$(readlink -f "$(echo "$*" | cut -d' ' -f2)")"
#fi

N=0
for i in "$@" ; do
	# Absolute filepath
	archive="$(readlink -f "$i")" &&
	# Absolute filepath without extension
	directory="$(echo "$archive" | sed 's/\.[^\/.]*$//')"

	[ "$archive" = "" ] && printf "Give archive to extract as argument.\\n" && exit

	N=$((N+1))
	printf "Extracting %d/%d : %s\\n" "$N" "$#" "$i"
	if [ -f "$archive" ] ; then
		case "$archive" in
			*.tar.bz2|*.tar.xz|*.tbz2)
				cmd="tar xvjf"
				;;
			*.tar.gz|*.tgz)
				cmd="tar xvzf"
				;;
			*.lzma)
				cmd="unlzma"
				;;
			*.bz2)
				cmd="bunzip2"
				;;
			*.rar)
				cmd="unrar x"
				;;
			*.gz)
				cmd="gunzip"
				;;
			*.tar)
				cmd="tar xvf"
				;;
			*.zip)
				cmd="unzip"
				;;
			*.Z)
				cmd="uncompress"
				;;
			*.7z|*.iso)
				cmd="7z x"
				;;
			*.xz)
				cmd="unxz"
				;;
			*.exe)
				cmd="cabextract"
				;;
			*)
				printf "extract: '%s' - unknown archive method\\n" "$archive"
				continue
				;;
		esac

		if [ -e "$directory" ] ; then
			printf "'%s' already exists.\\n" "$directory"
			continue
		fi

		mkdir -p "$directory" || exit
		cd "$directory"

		$cmd "$archive"
		cd "$OLDPWD"
	else
		printf "File \"%s\" not found.\\n" "$archive"
	fi
done
