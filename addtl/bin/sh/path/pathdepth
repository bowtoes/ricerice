#!/usr/bin/env sh

ONLYCOUNT=0
RELBASE="/"
while [ $# -gt 0 ] ; do
	case "$1" in
		-[Dd]) ONLYCOUNT=$((1-ONLYCOUNT)) ;;
		-r)
			RELBASE="$2"
			shift
			;;
		*)
			PTH="$(realpath --relative-to "$RELBASE" -sm "$1")"
			if [ $ONLYCOUNT -eq 0 ] ; then
				printf "%2d %s\\n" "$(charcount -s "/" "$PTH")" "$PTH"
			else
				printf "%d\\n" "$(charcount -s "/" "$PTH")"
			fi
			;;
	esac
		shift
done
