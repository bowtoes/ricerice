#!/usr/bin/env sh

types=""
types="${types}\|abr"
types="${types}\|ani"

types="${types}\|ba2"
types="${types}\|bin"
types="${types}\|bnk"
types="${types}\|bsa"
types="${types}\|bsp"
types="${types}\|bxm"
types="${types}\|blend"
types="${types}\|blend1"

types="${types}\|c"
types="${types}\|cc"
types="${types}\|cs"
types="${types}\|cfg"
types="${types}\|cnf"
types="${types}\|cpk"
types="${types}\|cpp"
types="${types}\|cur"
types="${types}\|conf"
types="${types}\|cache"
types="${types}\|config"
types="${types}\|csproj"

types="${types}\|dat"
types="${types}\|dll"
types="${types}\|dem"
types="${types}\|dxf"
types="${types}\|docx"

types="${types}\|ent"
types="${types}\|enlMeta"

types="${types}\|fbx"
types="${types}\|fnt"
types="${types}\|fon"

types="${types}\|gz"
types="${types}\|gbr"
types="${types}\|ggr"
types="${types}\|gif"
types="${types}\|gpl"

types="${types}\|h"
types="${types}\|hh"
types="${types}\|hpp"

types="${types}\|ico"
types="${types}\|idx"
types="${types}\|ini"
types="${types}\|inf"

types="${types}\|jpg"
types="${types}\|jpeg"

types="${types}\|lmp"

types="${types}\|md"
types="${types}\|mdl"
types="${types}\|mp3"
types="${types}\|mp2"
types="${types}\|mp4"
types="${types}\|mp4"
types="${types}\|ms2"
types="${types}\|mtl"

types="${types}\|obj"
types="${types}\|otf"

types="${types}\|pdf"
types="${types}\|png"
types="${types}\|pack"

types="${types}\|qc"

types="${types}\|rc"
types="${types}\|rss"

types="${types}\|sln"
types="${types}\|smd"
types="${types}\|smx"
types="${types}\|spr"
types="${types}\|svg"
types="${types}\|swf"
types="${types}\|sample"
types="${types}\|settings"

types="${types}\|ttf"
types="${types}\|txt"
types="${types}\|tmod"
types="${types}\|tmtheme"

types="${types}\|usm"

types="${types}\|vbr"
types="${types}\|vdf"
types="${types}\|vpk"
types="${types}\|vtf"
types="${types}\|vmf"
types="${types}\|vmt"
types="${types}\|vssettings"

types="${types}\|wad"
types="${types}\|wai"
types="${types}\|wav"
types="${types}\|wem"
types="${types}\|wsp"
types="${types}\|webm"
types="${types}\|woff"

types="${types}\|xcf"
types="${types}\|xml"
types="${types}\|xspf"

types="${types}\|zip"

DEPTH=-1
ARGS=""

while [ $# -gt 0 ] ; do
	if [ "$1" = "-d" ] ; then
		DEPTH=$2
		shift
	else
		ARGS="$ARGS $1"
	fi
	shift
done

if [ $DEPTH -ge 0 ] ; then
	find $ARGS -maxdepth $DEPTH -type f -iregex ".*\.\($types\)" -exec chmod -x -c {} +
else
	find $ARGS -type f -iregex ".*\.\($types\)" -exec chmod -x -c {} +
fi
