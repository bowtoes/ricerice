#!/usr/bin/env sh

ONLYCOUNT=0
while [ $# -gt 0 ] ; do
    case "$1" in
        -[Dd])
            ONLYCOUNT=1
            ;;
        *)
            PTH=`realpath -sm "$1"`
            if [ $ONLYCOUNT -eq 0 ] ; then
                printf "%2d %s\n" `charcount -s "/" "$PTH"` "$1"
            else
                printf "%d\n" `charcount -s "/" "$PTH"`
            fi
            ;;
        esac
        shift
done
