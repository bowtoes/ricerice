
# /etc/profile

# System wide environment variables and startup programs.

# System wide aliases and functions should go in /etc/bashrc.
# Personal environment variables and startup programs should go into ~/.bash_profile.
# Personal aliases and functions should go into ~/.bashrc.

# Set our umask
umask 022

# Append our default paths
append () {
    case ":$PATH:" in
        *:"$1":*)
            ;;
        *)
            PATH="${PATH:+$PATH:}$1"
    esac
}

appendrecurse ()
{
    if [ -d "$(realpath "$1")" ] ; then
        for d in $(find -L "$(realpath "$1")" -type d -not -path '*.git*') ; do
            append $d
        done
    fi
}


append "/usr/local/sbin"
append "/usr/local/bin"
append "/usr/bin"
append "/usr/include"
append "/usr/local/include"
appendrecurse "/addtl/bin"

unset append
unset appendrecurse

export PATH

# Load profiles from /etc/profile.d
if [ -d "/etc/profile.d/" ] ; then
    for profile in /etc/profile.d/*.sh ; do
        [ -r "$profile" ] && . "$profile"
    done
    unset profile
fi

# Source global bash config
[ "$BASH" ] && [ -z ${POSIXLY_CORRECT+x} ] && [ -r "/etc/bash.bashrc" ] && . "/etc/bash.bashrc"

# Termcap is outdated, old, and crusty, kill it.
unset TERMCAP

# Man is much better than us at figuring this out
unset MANPATH
