#!/bin/sh
types="ttf"
types="${types}\|fon"
types="${types}\|fnt"
types="${types}\|otf"
types="${types}\|woff"
types="${types}\|png"
types="${types}\|jpg"
types="${types}\|jpeg"
types="${types}\|smx"
types="${types}\|txt"
types="${types}\|cfg"
types="${types}\|vpk"
types="${types}\|vdf"
types="${types}\|inf"
types="${types}\|vtf"
types="${types}\|bsp"
types="${types}\|conf"
types="${types}\|cnf"
types="${types}\|config"
types="${types}\|vmf"
types="${types}\|dll"
types="${types}\|xspf"
types="${types}\|wav"
types="${types}\|mp3"
types="${types}\|mp2"
types="${types}\|mp4"
types="${types}\|mp4"
types="${types}\|swf"
types="${types}\|cur"
types="${types}\|ani"

find "$1" -type f -regex ".*\.\($types\)" -exec chmod -x -- {} +
