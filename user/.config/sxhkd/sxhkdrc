# Basic binds
super + Return
    $TERMINAL bash -l
super + shift + Return
    tabbed -r 2 $TERMINAL -w '' -e bash -l
super + d
    dmenu_run
super + r
    $TERMINAL -e $FILE
super + shift + w
    $BROWSER
super + ctrl + w
    tabbed $BROWSER -e
super + e
    $EXPLORER
super + a
    $AUDIO
super + z
    $EXPLORER "$MUSICDIR" & \
    $AUDIO

super + p
    octopi
super + b
    setbg "$WALLDIR"

# Et cetera...
super + grave
    dmenuunicode
super + shift + e
    $EDITOR

# Function keys
super + F1
    ducksearch
super + F4
    dmenuprompt 'Hibernate computer?' 'date ; systemctl hibernate'
super + F5
    dmenuprompt "Shutdown dwm?" "killall dwm"
super + F6
    dmenuprompt "Shutdown X?" "killall Xorg"
super + F7
    dmenuprompt "Shutdown computer?" "poweroff"
super + F8
    dmenuprompt "Reboot computer?" "reboot"
