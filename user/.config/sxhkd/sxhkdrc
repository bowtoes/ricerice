# Basic binds
super + Return
    $TERMINAL $TERMINALCMD
super + shift + Return
    $TABCMD $TERMINALCMD
super + d
    dmenu_run
super + r
    $TERMINAL
super + shift + w
    $BROWSER
super + ctrl + w
    $TABBROWSER2
super + e
    $EXPLORERCMD
super + ctrl + e
	$TERMINAL $EXPLORER2CMD
super + ctrl + shift + e
	$TABEXPLORER2
super + a
    $AUDIO
super + z
    $EXPLORERCMD "$MUSICDIR" & \
    $AUDIO

#super + b
#    setbg "$WALLDIR"

# Et cetera...
super + grave
    dmenuunicode
super + ctrl + e
    $EDITORCMD

# Function keys
super + F1
    ducksearch
super + F2
    dmenuprompt "Shutdown dwm?" "killall dwm"
super + F3
    dmenuprompt "Shutdown X?" "killall Xorg"
super + F4
    dmenuprompt "Shutdown computer?" "poweroff"
super + F5
    dmenuprompt "Reboot computer?" "reboot"
super + shift + F5
	dmenuprompt "Restart sxhkd?" "kill -10 `pgrep sxhkd`"
super + F6
    dmenuprompt 'Hibernate computer?' 'date ; systemctl hibernate'
