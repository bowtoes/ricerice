# ~/.defines

# Personal environment variables

export WALLDIR="$HOME/wallpapers/include"
export LOGDIR="$HOME/.log"

export TERMINAL="st"
export TERMINALCMD="-e bash -l"
export TABCMD="tabbed -r 2 $TERMINAL -w ''"

export EDITOR="vim"
export EDITORCMD="-e $EDITOR"
export TABEDITOR="$TABCMD $EDITORCMD"

export BROWSER="brave"
export BROWSERCMD="$BROWSER"

export BROWSER2="surf"
export TABBROWSER2="tabbed $BROWSER2 -e"

export AUDIO="vlc"

export EXPLORER="thunar"
export EXPLORERCMD="$EXPLORER"

export EXPLORER2="nnn"
export EXPLORER2CMD="-e $EXPLORER2 -dxrog"
export TABEXPLORER2="$TABCMD $EXPLORER2CMD"

export TERMCOLS="$HOME/.config/termcolors"
export DIRCOLS="$HOME/.config/dircolors"
[ -f "$TERMCOLS" ] && . "$TERMCOLS"
[ -f "$DIRCOLS" ] && . "$DIRCOLS"

export DEV="/addtl/dev"
export RICEDIR="/addtl/dev/other/ricerice"

export XRESOURCES="$HOME/.config/xconf/Xresources"
export XMODMAP="$HOME/.config/xconf/Xmodmap"
export XPROFILE="$HOME/.config/xconf/Xprofile"

export LESSHISTFILE="$LOGDIR/lesshst"
export HISTFILE="$LOGDIR/bash_history"
export FIT_LOG="$LOGDIR/fit_log"

export DEFINES2="$DEFINES""2"
[ -f "$DEFINES2" ] && . "$DEFINES2"
