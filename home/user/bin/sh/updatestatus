#!/bin/sh

day="$(date +"%a")"
dte="$(date +"%02m/%02d/%02y")"
time="$(date +"%02I:%02M:%02S%p")"
uptime="$(getuptime)"
#mem="$(mempercent | xargs printf "%5.5s%%")"
mem="$(memfraction)"
cpu="$(cpupercent | xargs printf "%5.5s%%")"
#cpu="$(cpuavg)"
#xsetroot -name ""
xsetroot -name "|$uptime|$cpu|$mem|$dte|$time"
